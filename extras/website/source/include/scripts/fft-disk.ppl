# Definition of function representing a disk
disk(x,y) = tophat(hypot(x,y) , 1)

# Take FFT of disk
fft [-40:40:0.1][-40:40:0.1] fft() of disk()

w = unit(5*cm)
set numerics complex
set nogrid
set key below
set sample grid 300x300
set size w square

set multiplot
set nodisplay

# Plot real-space image
plot [-2:2][-2:2] disk(x,y) with colourmap

# Plot Fourier-domain image
set origin w+unit(5*mm),0
set axis y right
plot [-2:2][-2:2] abs(fft(x,y)) with colourmap

set display
refresh

