set multiplot
set nodisplay
set numerics complex
StepsMax=10
yn=0
for y=2 to -2 step -0.04
 {
  xn=0
  for x=-2 to 2 step 0.04
   {
    zi = x+i*y; z=zi; iter=0;
    while (abs(z)<2) and (iter<StepsMax) { ; z = z**2 + zi ; iter=iter+1 ; }
    cd = iter/StepsMax
    rect from xn,yn to xn+0.105,yn+0.105 with col null fillc rgb(cd):(cd):(cd)
    xn=xn+0.1
   }
  yn=yn+0.1
 }

# Display output
set display
refresh
